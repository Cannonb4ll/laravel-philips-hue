{
  "name": "cannonb4ll/laravel-philips-hue",
  "description": "Laravel Philips Hue package to control your lights with remote support",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Dennis Smink",
      "email": "dennissmink@gmail.com",
      "homepage": "http://www.dennissmink.nl",
      "role": "Owner"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^7.1",
    "guzzlehttp/guzzle": "^6.5|^7.0",
    "illuminate/support": "^6.0|^7.0|^8.0",
    "ext-json": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16",
    "orchestra/testbench": "^3.8|^4.0|^5.0"
  },
  "autoload": {
    "psr-4": {
      "Philips\\Hue\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Philips\\Hue\\PhilipsHueServiceProvider"
      ]
    }
  },
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
    "format": "vendor/bin/php-cs-fixer fix"
  }
}
